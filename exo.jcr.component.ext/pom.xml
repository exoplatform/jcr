                                       <filter token="TEST_CLASSES" value="${testOutputDirectoryURL}" />
                                    </filterset>
                                 </copy>
                              </tasks>                     
                           </configuration>
                           <goals>
                              <goal>run</goal>
                           </goals>
                        </execution>
